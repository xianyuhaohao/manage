/* pages/courseInfo/courseInfo.wxss */
@import '../invoiceApply/invoiceApply.wxss';

#courseInfo{
  padding: 0 40rpx;
  background: #fff;
  box-shadow: 0px 16px 16px 0px rgba(86, 64, 247, 0.06);
}
.apply_show{
  padding: 0;
}
.course,.pay,.mail{
  border-bottom: 1px solid #EFEFF8;
  padding: 40rpx 0;
  color: #9494AF;
  font-size: 26rpx;
}
.info_title{
  color: #7955F9;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}
.info_name{
  margin-bottom: 40rpx;
  color:#444452;
  font-size: 30rpx;
}
.info_content{
  font-size: 26rpx;
  color: #9494AF;
  display: flex;
  flex-wrap: wrap;

}
.info_content view{
  width: 260rpx;
  line-height: 60rpx;
}
.info_content text{
  color:#444452;
}
.pay_wrap{
  padding: 40rpx;
  border-radius: 6rpx;
  background-color: rgba(250, 250, 254, 1);
  margin-bottom: 20rpx;
}
.money{
  font-size: 26rpx;
  color: #FF5151;
  margin-bottom: 15rpx;
}
.date{
  font-size: 24rpx;
  color: #9494AF;
}
.mail text{
  color: #444452;
}