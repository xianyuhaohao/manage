/* pages/detail/detail.wxss */
@import '../invoiceApply/invoiceApply.wxss';
@import '../courseInfo/courseInfo.wxss';

#detail{
  background: #FAFAFE;
}
.top{
  color: #fff;
  padding:0 20rpx;
  height: 340rpx;
  background:-webkit-linear-gradient(top,#744EF7,#AC86FC,#fff);
}
.client{
  font-size: 48rpx;
  padding: 30rpx 0 0;
}
.gender{
  font-size: 30rpx;
}
.card_wrap{
  padding: 0 20rpx;
  position: relative;
  top: -205rpx;
  left: 0;
  margin-bottom: 30rpx;
}
.client_card{
  padding: 40rpx;
  color: #444452;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 50rpx;
  background-color: rgba(255, 255, 255, 1);
  border-radius: 6rpx;
  box-shadow: 0px 16px 16px 0px rgba(86, 64, 247, 0.06);

}
.edit{
  font-size: 28rpx;
  color: #744EF7;
  font-weight: normal;
}
.contact{
  font-weight: 80;

}
.phone{
  margin-right: 40rpx;
}
.mark{
  border-top: 1px solid #EFEFF8;
  padding-top: 40rpx;
  margin-top: 50rpx;
}
.mark_title{
  color: #646476;
  font-size: 24rpx;
  line-height: 40rpx;
}
.mark_content{
  margin-right: 30rpx;
}
.done_course{
  padding:0 20rpx;
  color:#9494AF;
  font-size: 30rpx;
  margin:0 0 30rpx;
  position: relative;
  top:-200rpx;
}
.course_wrap{
  width: 1500rpx;
  display: flex;
  flex-direction: row;
}
.card_item{
  width: 300rpx;
  height: 116rpx;
  margin-right: 30rpx;
  border-radius:6px;
  padding: 20rpx;
  font-size: 26rpx;
  background-color: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 16rpx 16rpx 0rpx rgba(86, 64, 247, 0.06);
}
.course_name{
  height: 60rpx;
  line-height: 60rpx;
  color: #646476;
  width: 100%;
  overflow: hidden;
  font-weight: bold;
}
.course_title{
  margin-bottom: 30rpx;
}
.order{
  position: relative;
  top: -180rpx;
  padding: 0 20rpx;
}
.order_detail{
  margin-bottom: 60rpx;
  box-shadow: 0px 16px 16px 0px rgba(86, 64, 247, 0.06);
}

.order_wrap{
  padding: 40rpx;
  background-color: rgba(255, 255, 255, 1);
}
.fenqizhong{
  font-size: 30rpx;
  color: #FF5151;
  font-weight: bold;
  border-bottom: 1px solid #EFEFF8;
  padding-bottom: 40rpx;
  margin-bottom: 40rpx;
}
.order_course{
  color: #444452;
  font-size: 34rpx;
  margin-bottom: 50rpx;
}
.fenqi_content{
  font-size: 26rpx;
  color: #9494AF;
  display: flex;
  flex-wrap: wrap;

}
.fenqi_content view{
  width: 300rpx;
  line-height: 60rpx;
}
.fenqi_content text{
  color:#444452;
}
.record{
  padding: 40rpx;
  background: #FAFAFE;
  font-size: 26rpx;
  color: #744EF7;
  margin-bottom: -70rpx;
}
.record_title{
  margin-bottom: 30rpx;
  color: #646476;
}
.record_content{
  border-bottom: 1px solid #EFEFF8;
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
}
.date{
  color: #9494AF;
  font-size: 24rpx;
}
.fenqi_ipt{
  background: #fff;
  padding: 40rpx;
}
.state{
  font-size: 30rpx;
  color: #444452;
  font-weight: bold;
  border-bottom: 1px solid #EFEFF8;
  padding-bottom: 40rpx;
  margin-bottom: 40rpx;
}
.genjin{
  color: #32A9FF;
}
.fenqi{
  color: #FF5151;
}
.chengjiao{
  color: #16B3A3;
}
.txt{
  color:#646476;
  font-size: 26rpx;
  font-weight: bold;
}
.ipt{
  margin: 30rpx 0 40rpx;
}
.picker{
  height: 50rpx;
  padding: 28rpx 40rpx;
  outline: none;
  border: none;
  border-radius: 10rpx;
  background-color: rgba(250, 250, 254, 1);
}
.star{
  color:red;
}

.mail_check {
  font-size: 28rpx;
  color: #9494AF;
}
.checkImg{
  margin-right: 15rpx;
}
.checkImg image{
  width: 30rpx;
  height: 30rpx;
}
.apply{
  background-color: rgba(250, 250, 254, 1);
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color: #744EF7;
  font-size: 30rpx;
}
.remarks{
  display: flex;
  margin-bottom: 30rpx;
  align-items: center;
  color:#646476;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 10rpx;
}
.remarks .txt{
  width: 120rpx;
}
.remarks input{
  width: 100%;
}

.submit{
  padding: 0 20rpx;
  position: relative;
  top: -150rpx;
}
.sub_btn{
  font-size: 32rpx;
  color: #fff;
  background: #744EF7;
  border: none;
}
.courseInfor_wrap{
  position: relative;
  top: -180rpx;
  padding: 20rpx;
  
}